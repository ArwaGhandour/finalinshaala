@model IEnumerable<School_Final.Models.Entities.Assignment>

@{
    ViewData["Title"] = "GetAllAssignments";
}

<h1>GetAllAssignments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assigneddate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.teacher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Assigneddate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.teacher.TeacherID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject.SubjectID)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.AssignmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AssignmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AssignmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
