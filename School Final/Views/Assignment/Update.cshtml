@model School_Final.Models.ViewModel.AssignmentViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssID" />
            <div class="form-group">
                <label asp-for="datee" class="control-label"></label>
                <input asp-for="datee" class="form-control" />
                <span asp-validation-for="datee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeacherIDD" class="control-label"></label>
                <select asp-for="TeacherIDD" class="form-control" >
                    @foreach (var item in Model.Teachers)
                    {
                        <option value="@item.TeacherID">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="TeacherIDD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectIDD" class="control-label"></label>
                <select asp-for="SubjectIDD" class="form-control" >
                    @foreach (var item in Model.Subjects)
                    {
                        <option value="@item.SubjectID">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="SubjectIDD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllAssignments">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
